<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_margin="4dp"
    android:background="#120D0D"
    android:translationZ="@dimen/padding_10"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/league_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="league"
            android:layout_marginStart="8dp"
            android:textColor="@color/appColor"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:padding="0dp">


            <TextView
                android:id="@+id/homeTeamScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textColor="@color/appColor" />

            <TextView
                android:id="@+id/awayTeamScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:text=""
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textColor="@color/appColor" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/homeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:textColor="@color/appColor" />
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/appColor"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/awayTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:textColor="@color/appColor"/>


        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:paddingEnd="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/initawayOdd"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/appColor"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/initHomeOdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            android:layout_height="wrap_content"
            android:textColor="@color/appColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/initDrawOdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            android:layout_height="wrap_content"
            android:textColor="@color/appColor"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:paddingEnd="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/liveawayOdd"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/appColor"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/liveHomeOdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            android:layout_height="wrap_content"
            android:textColor="@color/appColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/liveDrawOdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            android:layout_height="wrap_content"
            android:textColor="@color/appColor"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>


